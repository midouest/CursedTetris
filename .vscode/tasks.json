{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "detail": "Build the game",
      "type": "shell",
      "command": "pdc",
      "args": [
        "-sdkpath",
        "${env:PLAYDATE_SDK_PATH}",
        "${workspaceFolder}/Source",
        "${workspaceFolder}/${workspaceFolderBasename}.pdx"
      ],
      "presentation": {
        "showReuseMessage": false
      },
      "problemMatcher": [
        {
          "owner": "lua",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^(error): (.+):(\\d+): (.+)$",
            "severity": 1,
            "file": 2,
            "line": 3,
            "message": 4
          }
        }
      ]
    },
    {
      "label": "Run (Simulator)",
      "detail": "Run the current build in the Playdate Simulator",
      "type": "shell",
      "command": "open",
      "args": [
        "-a",
        "${env:PLAYDATE_SDK_PATH}/bin/Playdate Simulator.app",
        "${workspaceFolder}/${workspaceFolderBasename}.pdx"
      ]
    },
    {
      "label": "Build and Run (Simulator)",
      "detail": "",
      "dependsOn": ["Build", "Run (Simulator)"],
      "dependsOrder": "sequence",
      "presentation": {
        "showReuseMessage": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
